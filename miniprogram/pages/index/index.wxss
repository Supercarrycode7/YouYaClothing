/* pages/index/index.wxss */
.container {
  background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
  min-height: 100vh;
}

.banner-swiper {
  width: 100%;
  height: 400rpx;
  margin-bottom: 40rpx;
  border-radius: 0 0 30rpx 30rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.banner-image {
  width: 100%;
  height: 100%;
}

.category-nav {
  display: flex;
  justify-content: space-around;
  margin: 40rpx 30rpx;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(255, 255, 255, 0.7) 100%);
  border-radius: 25rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 32rpx rgba(31, 38, 135, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s ease;
}

.category-item:active {
  transform: translateY(-5rpx);
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 15rpx;
  border-radius: 50%;
  padding: 10rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  transition: all 0.3s ease;
}

.category-item:active .category-icon {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.2) 0%, rgba(118, 75, 162, 0.2) 100%);
  transform: scale(1.1);
}

.category-name {
  font-size: 26rpx;
  color: #2d3748;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.section {
  margin: 50rpx 30rpx 40rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #2d3748;
  margin-bottom: 30rpx;
  padding-left: 20rpx;
  position: relative;
  letter-spacing: 2rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 3rpx;
}

.product-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 10rpx;
}

.product-item {
  width: calc(50% - 10rpx);
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(255, 255, 255, 0.7) 100%);
  border-radius: 20rpx;
  overflow: hidden;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 32rpx rgba(31, 38, 135, 0.12);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
  margin-bottom: 20rpx;
}

.product-item:active {
  transform: translateY(-8rpx);
  box-shadow: 0 12rpx 40rpx rgba(31, 38, 135, 0.2);
}

.product-image {
  width: 100%;
  height: 280rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
}

.product-image-container {
  position: relative;
  overflow: hidden;
}

.product-image-container .tag {
  position: absolute;
  top: 15rpx;
  left: 15rpx;
  z-index: 2;
}

.product-info {
  padding: 25rpx 20rpx;
  background: rgba(255, 255, 255, 0.8);
}

.product-name {
  display: block;
  font-size: 28rpx;
  color: #2d3748;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.price-container {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.product-price {
  font-size: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-weight: 700;
  letter-spacing: 1rpx;
}

.original-price {
  font-size: 24rpx;
  color: #a0aec0;
  text-decoration: line-through;
  font-weight: 400;
}

/* 品牌故事区块 */
.brand-story {
  margin: 60rpx 30rpx 40rpx;
  padding: 50rpx 30rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
  border-radius: 30rpx;
  text-align: center;
  border: 1rpx solid rgba(102, 126, 234, 0.1);
}

.story-title {
  font-size: 40rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
}

.story-subtitle {
  font-size: 26rpx;
  color: #718096;
  line-height: 1.6;
  letter-spacing: 1rpx;
}
