/* pages/products/detail.wxss */
.product-swiper {
  width: 100%;
  height: 600rpx;
  margin-bottom: 30rpx;
}

.product-image {
  width: 100%;
  height: 100%;
}

.product-info {
  background: white;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.product-name {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.product-price {
  font-size: 40rpx;
  color: #ff6b6b;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.product-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}
