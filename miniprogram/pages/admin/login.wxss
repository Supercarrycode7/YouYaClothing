/* pages/admin/login.wxss */
.container {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  overflow: hidden;
}

.login-box {
  width: 640rpx;
  padding: 80rpx 60rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.25) 0%, rgba(255, 255, 255, 0.15) 100%);
  backdrop-filter: blur(20rpx);
  border-radius: 30rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(31, 38, 135, 0.37),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.3);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  position: relative;
  z-index: 10;
}

.logo {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo-icon {
  margin-bottom: 20rpx;
}

.logo-symbol {
  font-size: 80rpx;
  display: block;
}

.logo-text {
  font-size: 44rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 10rpx;
  letter-spacing: 3rpx;
}

.gradient-text {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.logo-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  letter-spacing: 2rpx;
}

.form-group {
  margin-bottom: 40rpx;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0.1) 100%);
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.input-wrapper:focus-within {
  border-color: rgba(255, 255, 255, 0.5);
  box-shadow: 0 0 0 4rpx rgba(255, 255, 255, 0.1);
}

.input-icon {
  padding: 0 25rpx;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.7);
}

.input {
  flex: 1;
  padding: 35rpx 25rpx 35rpx 0;
  font-size: 30rpx;
  color: #ffffff;
  background: transparent;
  border: none;
  outline: none;
}

.input::placeholder {
  color: rgba(255, 255, 255, 0.6);
}

.login-btn {
  width: 100%;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(255, 255, 255, 0.8) 100%);
  border: none;
  border-radius: 25rpx;
  padding: 35rpx;
  margin: 40rpx 0;
  box-shadow: 
    0 8rpx 25rpx rgba(0, 0, 0, 0.15),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  transition: all 0.3s ease;
}

.login-btn:active {
  transform: translateY(-2rpx);
  box-shadow: 
    0 12rpx 35rpx rgba(0, 0, 0, 0.2),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
}

.btn-text {
  font-size: 32rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: 2rpx;
}

.divider {
  display: flex;
  align-items: center;
  margin: 50rpx 0;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background: linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.3) 50%, transparent 100%);
}

.divider-text {
  margin: 0 30rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
}

.scan-login {
  text-align: center;
}

.scan-btn {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.15) 0%, rgba(255, 255, 255, 0.05) 100%);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  padding: 25rpx 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
  width: 300rpx;
  margin: 0 auto;
}

.scan-btn:active {
  transform: translateY(-2rpx);
  border-color: rgba(255, 255, 255, 0.4);
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.25) 0%, rgba(255, 255, 255, 0.15) 100%);
}

.scan-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.scan-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 600;
  letter-spacing: 1rpx;
}

/* 装饰背景 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 1;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%);
  backdrop-filter: blur(5rpx);
}

.circle-1 {
  width: 300rpx;
  height: 300rpx;
  top: -150rpx;
  right: -150rpx;
}

.circle-2 {
  width: 200rpx;
  height: 200rpx;
  bottom: -100rpx;
  left: -100rpx;
}

.circle-3 {
  width: 150rpx;
  height: 150rpx;
  top: 50%;
  left: -75rpx;
  transform: translateY(-50%);
}
