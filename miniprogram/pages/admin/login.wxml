<!-- pages/admin/login.wxml -->
<view class="container">
  <view class="login-box">
    <view class="logo">
      <view class="logo-icon">
        <text class="logo-symbol">👑</text>
      </view>
      <text class="logo-text gradient-text">管理员登录</text>
      <text class="logo-subtitle">优雅服饰管理系统</text>
    </view>
    
    <form bindsubmit="onLogin">
      <view class="form-group">
        <view class="input-wrapper">
          <view class="input-icon">👤</view>
          <input name="username" placeholder="请输入用户名" class="input" value="{{username}}" bindinput="onUsernameInput" />
        </view>
      </view>
      
      <view class="form-group">
        <view class="input-wrapper">
          <view class="input-icon">🔒</view>
          <input name="password" placeholder="请输入密码" password="{{true}}" class="input" value="{{password}}" bindinput="onPasswordInput" />
        </view>
      </view>
      
      <button formType="submit" class="login-btn">
        <text class="btn-text">立即登录</text>
      </button>
    </form>
    
    <view class="divider">
      <view class="divider-line"></view>
      <text class="divider-text">或</text>
      <view class="divider-line"></view>
    </view>
    
    <view class="scan-login">
      <button bindtap="scanLogin" class="scan-btn">
        <text class="scan-icon">📱</text>
        <text class="scan-text">扫码登录</text>
      </button>
    </view>
  </view>
  
  <!-- 装饰背景 -->
  <view class="bg-decoration">
    <view class="decoration-circle circle-1"></view>
    <view class="decoration-circle circle-2"></view>
    <view class="decoration-circle circle-3"></view>
  </view>
</view>
